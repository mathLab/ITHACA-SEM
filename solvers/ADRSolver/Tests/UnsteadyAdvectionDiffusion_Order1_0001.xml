<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.nektar.info/schema/nektar.xsd">

    <GEOMETRY DIM="2" SPACE="2">

        <VERTEX>
            <V ID="0"> 0.0 0.0 0.0 </V>
            <V ID="1"> 0.0 0.5 0.0 </V>
            <V ID="2"> 0.0 1.0 0.0 </V>
            <V ID="3"> 0.5 0.0 0.0 </V>
            <V ID="4"> 0.5 0.5 0.0 </V>
            <V ID="5"> 0.5 1.0 0.0 </V>
            <V ID="6"> 1.0 0.0 0.0 </V>
            <V ID="7"> 1.0 0.5 0.0 </V>
            <V ID="8"> 1.0 1.0 0.0 </V>
        </VERTEX>

        <EDGE>
            <E ID="0"> 0 1   </E>
            <E ID="1"> 1 2   </E>
            <E ID="2"> 3 4   </E>
            <E ID="3"> 4 5   </E>
            <E ID="4"> 6 7   </E>
            <E ID="5"> 7 8   </E>
            <E ID="6"> 0 3   </E>
            <E ID="7"> 3 6   </E>
            <E ID="8"> 1 4   </E>
            <E ID="9"> 4 7   </E>
            <E ID="10"> 2 5   </E>
            <E ID="11"> 5 8   </E>
        </EDGE>

        <ELEMENT>
            <Q ID="0"> 0 6 2 8 </Q>
            <Q ID="1"> 1 8 3 10 </Q>
            <Q ID="2"> 2 7 4 9 </Q>
            <Q ID="3"> 3 9 5 11 </Q>
        </ELEMENT>

        <COMPOSITE>
            <C ID="0"> Q[0-3]</C>
            <C ID="1"> E[0,1,6,7,4,5,10,11]</C>
        </COMPOSITE>

        <DOMAIN> C[0] </DOMAIN>

    </GEOMETRY>

    <EXPANSIONS>
        <E COMPOSITE="C[0]" NUMMODES="9" FIELDS="u" TYPE="MODIFIED" />
    </EXPANSIONS>

    <CONDITIONS>

        <SOLVERINFO>
            <I PROPERTY="EQTYPE"                VALUE="UnsteadyAdvectionDiffusion" />
            <I PROPERTY="Projection"            VALUE="Continuous" />
            <I PROPERTY="DiffusionAdvancement"  VALUE="Implicit" />
            <I PROPERTY="AdvectionAdvancement"  VALUE="Explicit" />
            <I PROPERTY="TimeIntegrationMethod" VALUE="IMEXOrder1" />
        </SOLVERINFO>

        <PARAMETERS>
            <P> TimeStep = 0.0001               </P>
            <P> NumSteps = 1000                 </P>
            <P> IO_CheckSteps = 1000            </P>
            <P> IO_InfoSteps = 1000             </P>
            <P> wavefreq = PI                   </P>
            <P> epsilon = 1.0                   </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> u </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="0"> C[1] </B>
        </BOUNDARYREGIONS>

        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <D VAR="u" USERDEFINEDTYPE="TimeDependent"
                    VALUE="exp(-2.0*wavefreq*wavefreq*t)*sin(wavefreq*(x-1*t))*sin(wavefreq*(y-1*t))" />
            </REGION>
        </BOUNDARYCONDITIONS>

        <FUNCTION NAME="AdvectionVelocity">
            <E VAR="Vx" VALUE="1.0" />
            <E VAR="Vy" VALUE="1.0" />
        </FUNCTION>

        <FUNCTION NAME="InitialConditions">
            <E VAR="u" VALUE="sin(PI*x)*sin(PI*y)" />
        </FUNCTION>

        <FUNCTION NAME="ExactSolution">
            <E VAR="u"
                VALUE="exp(-2.0*wavefreq*wavefreq*t)*sin(wavefreq*(x-1*t))*sin(wavefreq*(y-1*t))" />
        </FUNCTION>

    </CONDITIONS>

</NEKTAR>
